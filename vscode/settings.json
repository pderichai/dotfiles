{
  "workbench.editor.enablePreview": false,
  "editor.rulers": [80, 100],
  "terminal.integrated.scrollback": 10000,

  "terminal.integrated.profiles.osx": {
    "main": {
      "path": "tmux",
      "args": [
        "new-session",
        "-A",
        "-s",
        "main"
      ]
    }
  },
  "terminal.integrated.defaultProfile.osx": "main",

  "terminal.integrated.profiles.linux": {
    "main": {
      "path": "tmux",
      "args": [
        "new-session",
        "-A",
        "-s",
        "main"
      ]
    }
  },
  "terminal.integrated.defaultProfile.linux": "main",

  "vim.useSystemClipboard": true,
  "vim.leader": "space",
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["f", "d"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["f", "d"],
      "after": ["<Esc>"]
    }
  ],
  "vim.commandLineModeKeyBindingsNonRecursive": [
    {
      "before": ["f", "d"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // "Window" settings.
    {
      "before": ["<leader>", "w", "|"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "w", "-"],
      "commands": ["workbench.action.splitEditorOrthogonal"]
    },
    {
      "before": ["<leader>", "w", "d"],
      "commands": ["workbench.action.closeEditorsInGroup"]
    },
    {
      "before": ["<leader>", "w", "h"],
      "commands": ["workbench.action.navigateLeft"]
    },
    {
      "before": ["<leader>", "w", "j"],
      "commands": ["workbench.action.navigateDown"]
    },
    {
      "before": ["<leader>", "w", "k"],
      "commands": ["workbench.action.navigateUp"]
    },
    {
      "before": ["<leader>", "w", "l"],
      "commands": ["workbench.action.navigateRight"]
    },
    // "Buffer" settings.
    {
      "before": ["<leader>", "b", "d"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "b", "a"],
      "commands": ["workbench.action.closeAllEditors"]
    },
    // Sane tab navigation.
    {
      "before": ["<leader>", "b", "n"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["<leader>", "b", "p"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    // Search for files.
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    // Search in code.
    {
      "before": ["<leader>", "f", "l"],
      "commands": ["workbench.view.search"]
    }
  ]
}
