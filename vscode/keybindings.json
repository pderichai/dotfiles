// Place your key bindings in this file to override the defaults
[
    // Remap command palette toggle.
    {
        "key": "ctrl+shift+p",
        "command": "workbench.action.showCommands"
    },

    // Remap file/folder opening.
    {
        "key": "ctrl+o",
        "command": "workbench.action.files.openFileFolder"
    },

    // Set ctrl+g to "close" things.
    {
        "key": "ctrl+g",
        "command": "extension.vim_escape",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
    },
    {
        "key": "ctrl+g",
        "command": "workbench.action.closeQuickOpen",
        "when": "inQuickOpen"
    },

    // Sane tab navigation.
    {
        "key": "tab",
        "command": "workbench.action.nextEditorInGroup",
        "when": "!terminalFocus && !inDebugRepl && !editorFocus || editorFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "shift+tab",
        "command": "workbench.action.previousEditorInGroup",
        "when": "!terminalFocus && !inDebugRepl && !editorFocus || editorFocus && vim.active && vim.mode != 'Insert'"
    },

    // Configure quick open.
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen"
    },

    // Emulating NERDTree.
    {
        "key": "ctrl+n",
        "command": "macros.openExplorer",
        "when": "!explorerViewletVisible"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "filesExplorerFocus"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "explorerViewletVisible && !filesExplorerFocus"
    },
    {
        "key": "enter",
        "command": "macros.openFileInExplorer",
        "when": "explorerViewletVisible && filesExplorerFocus && listFocus && !inputFocus && !explorerResourceIsFolder"
    },
    {
        "key": "ctrl+r",
        "command": "renameFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
    }
]
